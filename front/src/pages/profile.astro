---
import Debug from "../layouts/debug.astro";
import { OPTIONS } from "../mockup";
import { USER } from "../mockup";
---

<Debug
  title="Profile"
  description="Manage your profile"
  options={OPTIONS['profile']}
>
  <section class="col gap">
    <h1>{USER.name}'s profile</h1>
    <div class="row">
      <div class="col gap full-w">
        <p>Email: {USER.email}</p>
        <p>Password: XXXXXXXXX</p>
        <p>Member since: {new Date(USER.createdAt).toLocaleDateString()}</p>
        <p>Last updated: {new Date(USER.updatedAt).toLocaleDateString()}</p>
      </div>
      <div class="profile-image">
        <img src={USER.image} alt={USER.name} />
      </div>
    </div>
    <div>
      <a class="btn btn-primary">Edit Profile</a>
      <a class="btn btn-danger">Delete Profile</a>
    </div>
  </section>
</Debug>

<style>
  .profile-image {
    margin-right: 0px;
    display: flex;
    align-items: end;
    justify-content: end;
  }

  .profile-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
  }
</style>
